<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Product Add</title>
    
    <script>
        function Check(){
            var id = document.getElementByName('id')[0].value;
            var name = docment.getElementByName('name')[0].value;
            var price = docment.getElementByName('price')[0].value;

            if(id && name && price){
                return true;
            }

            alert('please input the info.');
            return false;
        }
    </script>
</head>

<body>
    <div class="container">
        <div class='text-center d-4'>
            <h1>Product - Add</h1>
        </div>
        <form action='/products/add' method='post' accept-charset='utf-8' onSubmit="return Check();">
            
            <div class="form-group">
                <label for="productId">Product Id:</label>
                <input type="text" name='id' class="form-control" id="productId"  aria-describedby="emailHelp" placeholder="product Id" >
            </div>
            <div class="form-group">
                <label for="productName">Product Name:</label>
                <input type="text" name='name' class="form-control" id="productName"  aria-describedby="productName" placeholder="product Name">
            </div>
            <div class="form-group">
                <label for="productPrice">Product price:</label>
                <input type="number" name='price' class="form-control" id="productIdPrice"  placeholder=" product price ">
            </div>
            <button type="submit " class="btn btn-primary ">Submit</button>
        </form>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js " integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo " crossorigin="anonymous "></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js " integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49 " crossorigin="anonymous "></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js " integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy " crossorigin="anonymous "></script>
</body>

</html>